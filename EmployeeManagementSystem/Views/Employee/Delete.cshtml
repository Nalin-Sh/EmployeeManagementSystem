@using EmployeeManagementSystem.Application.DTOs.Employee
@model EmployeeResponseDTO

@{
    ViewData["Title"] = "Delete Employee";
}

<h2>Are you sure you want to delete this employee?</h2>

<table class="table">
    <tr>
        <th>Name:</th>
        <td>@Model.Name</td>
    </tr>
    <tr>
        <th>Department:</th>
        <td>@Model.DepartmentName</td>
    </tr>
    <tr>
        <th>Salary:</th>
        <td>@Model.Salary.ToString("C")</td>
    </tr>
    <tr>
        <th>Date of Joining:</th>
        <td>@Model.DateOfJoining.ToShortDateString()</td>
    </tr>
</table>

<form asp-action="DeleteConfirmed" method="post">
    <input type="hidden" name="id" value="@Model.EmployeeID" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>